(* Programming Languages, Dan Grossman *)
(* Section 1: Examples to Demonstrate Shadowing *)

val a = 1
(* a : int
   a -> 10 *)
	    
val b = a * 2
(* b -> 20 *)
		
val a = 5
(* a -> 5, b -> 20 *)
	    
val c = b
(* a -> 5, b 0> 20, c0> 20 *)
	    
val d = a
(* ..., d -> 5 *)

val a = a + 1

(* next line does not type-check, f not in environment *)
(* val g = f - 3  *)

val f = a * 2

