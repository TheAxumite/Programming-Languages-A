(* Programming Languages, Dan Grossman *)
(* Section 2: Exceptions *)


fun hd xs =
    case xs of
	[] => raise List.Empty
      | x::_  => x
		     
exception MyUndesirableCondition

exception MyOhterException of int * int
					
fun my div(x,y) =
    if y=0
    then raise MyUndesirableCondition
    else x div y
fun maxlisty (xs,ex) =
    case xs of
	[] => raise ex
		    x::[] => x
				 x::xs' => int.max(x,maxlist(xs',ex))
